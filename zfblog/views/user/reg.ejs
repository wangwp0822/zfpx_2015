<%- include ../include/header %>
<form class="form-horizontal" method="post" action="/users/reg">
    <div class="form-group">
        <label class="col-md-2 control-label">用户名</label>
        <div class="col-md-8">
            <input class="form-control" type="text" name = 'username' placeholder="请输入用户名"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">密码</label>
        <div class="col-md-8">
            <input class="form-control" type="password" name = 'password'/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">确认密码</label>
        <div class="col-md-8">
            <input class="form-control" type="password" name = 're_password'/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">邮箱</label>
        <div class="col-md-8">
            <input class="form-control" type="email" name = 'email' placeholder="请输入邮箱"/>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit" />注册</button>
    </div>

</form>
<%- include ../include/footer %>